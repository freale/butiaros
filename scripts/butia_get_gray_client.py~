#!/usr/bin/env python
import roslib; roslib.load_manifest('Butia')

import sys

import rospy
from Butia.srv import *

def butia_get_gray_client(x):
    rospy.wait_for_service('butia_get_gray')
    try:
        butia_gray_value = rospy.ServiceProxy('butia_get_gray', ButiaGetGray)
        get_gray_value = butia_gray_value(x)
        return get_gray_value
    except rospy.ServiceException, e:
        print "Service call failed: %s"%e

def usage():
    return "%s [x]"%sys.argv[0]

if __name__ == "__main__":
    if len(sys.argv) == 2:
        x = int(sys.argv[1])
    else:
        print usage()
        sys.exit(1)
    print "Requesting getGray(%s)"%(x)
    print "getGray(%s) = %s"%(x, butia_get_gray(x))
